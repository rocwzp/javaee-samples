<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
	http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="jmsdemo" transaction-type="JTA">
	
		<jta-data-source>java:jboss/datasources/javaee6</jta-data-source>
		
		<class>com.sivalabs.javaee6demo.entities.Address</class>
		<class>com.sivalabs.javaee6demo.entities.Customer</class>
				
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
	
</persistence>
